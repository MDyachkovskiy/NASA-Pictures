<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="settings_title">
        <item name="android:textSize">@dimen/text_size_25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineHeight">26.4dp</item>
    </style>

    <!-- Mars Color Theme -->

    <style name="MarsTheme.GB_MaterialDesign" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryMarsTheme</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantMarsTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkMarsTheme</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondaryMarsTheme</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantMarsTheme</item>
        <item name="colorSecondaryContainer">@color/colorSecondaryContainerMarsTheme</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryMarsTheme</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryMarsTheme</item>
        <!-- Status bar color. -->
        <item name="bottomAppBarColor">@color/colorPrimaryMarsTheme</item>

        <item name="fontFamily">@font/roboto_thin</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="selected_tab_icon_color">@color/textColorSecondaryMarsTheme</item>
        <item name="selected_tab_text_color">@color/textColorSecondaryMarsTheme</item>
        <item name="tab_text_color">@color/colorOnPrimaryGreyTheme</item>
        <item name="tab_color">@color/colorOnPrimaryGreyTheme</item>

    </style>

    <!-- Moon Color Theme -->

    <style name="MoonTheme.GB_MaterialDesign" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryMoonTheme</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantMoonTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkMoonTheme</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryMoonTheme</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondaryMoonTheme</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantMoonTheme</item>
        <item name="colorSecondaryContainer">@color/colorSecondaryContainerMoonTheme</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryMoonTheme</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryMoonTheme</item>
        <!-- Status bar color. -->
        <item name="bottomAppBarColor">@color/colorPrimaryDarkMoonTheme</item>

        <item name="fontFamily">@font/roboto_thin</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="selected_tab_icon_color">@color/colorPrimaryDarkMoonTheme</item>
        <item name="selected_tab_text_color">@color/colorPrimaryDarkMoonTheme</item>
        <item name="tab_text_color">@color/colorOnPrimaryMoonTheme</item>
        <item name="tab_color">@color/colorOnPrimaryMoonTheme</item>

    </style>

    <style name="JupiterTheme.GB_MaterialDesign" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryJupiterTheme</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantJupiterTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkJupiterTheme</item>
