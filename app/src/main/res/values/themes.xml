<resources >

    <!-- Chip Style -->

    <style name="MyGreyChip.GB_MaterialDesign" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@drawable/selector_my_chip_background</item>
        <item name="shapeAppearanceOverlay">@style/MyGreyChip.Shape.GB_MaterialDesign</item>
        <item name="android:textAppearance">@style/MyTextAppearance.AppCompat.Body2</item>
    </style>

    <style name="MyGreyChip.Shape.GB_MaterialDesign" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="MyTextAppearance.AppCompat.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/roboto_mono_thin</item>
        <item name="android:fontFamily">@font/roboto_mono_thin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.0178571429</item>
    </style>

    <!-- Grey Color Theme -->

    <style name="MyGreyTheme.GB_MaterialDesign" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryGreyTheme</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantGreyTheme</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryGreyTheme</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondaryGreyTheme</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantGreyTheme</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorSecondaryGreyTheme</item>
        <item name="bottomAppBarColor">@color/colorSecondaryGreyTheme</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/roboto_thin</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Secondary brand color. -->
        <item name="selected_tab_icon_color">@color/colorSecondaryGreyTheme</item>
        <item name="selected_tab_text_color">@color/colorSecondaryGreyTheme</item>
        <item name="tab_text_color">@color/colorOnPrimaryGreyTheme</item>
        <item name="tab_color">@color/colorOnPrimaryGreyTheme</item>

    </style>

    <!-- Mars Color Theme -->

    <style name="MarsTheme.GB_MaterialDesign" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryMarsTheme</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantMarsTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkMarsTheme</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondaryMarsTheme</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantMarsTheme</item>
        <item name="colorSecondaryContainer">@color/colorSecondaryContainerMarsTheme</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryMarsTheme</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryMarsTheme</item>
        <!-- Status bar color. -->
        <item name="bottomAppBarColor">@color/colorPrimaryMarsTheme</item>

        <item name="fontFamily">@font/roboto_thin</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="selected_tab_icon_color">@color/textColorSecondaryMarsTheme</item>
        <item name="selected_tab_text_color">@color/textColorSecondaryMarsTheme</item>
        <item name="tab_text_color">@color/colorOnPrimaryGreyTheme</item>
        <item name="tab_color">@color/colorOnPrimaryGreyTheme</item>

    </style>

    <!-- Jupiter Color Theme -->

    <style name="JupiterTheme.GB_MaterialDesign" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryJupiterTheme</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantJupiterTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkJupiterTheme</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondaryJupiterTheme</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantJupiterTheme</item>
        <item name="colorSecondaryContainer">@color/colorSecondaryContainerJupiterTheme</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryJupiterTheme</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryJupiterTheme</item>
        <!-- Status bar color. -->
        <item name="bottomAppBarColor">@color/colorPrimaryDarkJupiterTheme</item>

        <item name="fontFamily">@font/roboto_thin</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="selected_tab_icon_color">@color/textColorPrimaryJupiterTheme</item>
        <item name="selected_tab_text_color">@color/textColorPrimaryJupiterTheme</item>
        <item name="tab_text_color">@color/colorOnPrimaryGreyTheme</item>
        <item name="tab_color">@color/colorOnPrimaryGreyTheme</item>

    </style>

    <!-- Moon Color Theme -->

    <style name="MoonTheme.GB_MaterialDesign" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryMoonTheme</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantMoonTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkMoonTheme</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryMoonTheme</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondaryMoonTheme</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantMoonTheme</item>
        <item name="colorSecondaryContainer">@color/colorSecondaryContainerMoonTheme</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryMoonTheme</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryMoonTheme</item>
        <!-- Status bar color. -->
        <item name="bottomAppBarColor">@color/colorPrimaryDarkMoonTheme</item>

        <item name="fontFamily">@font/roboto_thin</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="selected_tab_icon_color">@color/colorPrimaryDarkMoonTheme</item>
        <item name="selected_tab_text_color">@color/colorPrimaryDarkMoonTheme</item>
        <item name="tab_text_color">@color/colorOnPrimaryMoonTheme</item>
        <item name="tab_color">@color/colorOnPrimaryMoonTheme</item>

    </style>

    <!-- FAB Style -->

    <style name="MyFAB.GB_MaterialDesign" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/MyFAB.Shape.GB_MaterialDesign</item>
    </style>

    <style name="MyFAB.Shape.GB_MaterialDesign" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">15dp</item>
    </style>

    <!-- Splash Background -->

    <style name="Splash" parent="MyGreyTheme.GB_MaterialDesign">
        <item name="android:windowBackground">@drawable/splash_background_drawable</item>
    </style>

</resources>